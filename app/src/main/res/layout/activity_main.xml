<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartShift"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="@color/navy_blue"
        android:onClick="onStartShiftClicked"
        android:text="Start Shift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStopShift"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/golden_yellow"
        android:onClick="onStopShiftClicked"
        android:text="Stop Shift"
        app:iconTint="@color/navy_blue"
        app:layout_constraintEnd_toEndOf="@+id/btnStartShift"
        app:layout_constraintStart_toStartOf="@+id/btnStartShift"
        app:layout_constraintTop_toBottomOf="@+id/btnStartShift" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/navy_blue"
        android:onClick="onRegisterClicked"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/btnStopShift"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnStopShift"
        app:layout_constraintTop_toBottomOf="@+id/btnStopShift" />

    <Button
        android:id="@+id/btnShowRecords"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/golden_yellow"
        android:onClick="onShowRecordsClicked"
        android:text="Show Records"
        app:iconTint="@color/navy_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        app:rippleColor="@color/navy_blue" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>