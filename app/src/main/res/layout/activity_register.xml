<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".register.RegisterActivity">

    <EditText
            android:id="@+id/nameInput"
            android:layout_width="210dp"
            android:layout_height="46dp"
            android:layout_marginTop="136dp"
            android:ems="10"
            android:hint="John Doe"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/positionInput"
            android:layout_width="210dp"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="ex. Manager"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput" android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/textView13"
            android:layout_width="151dp"
            android:layout_height="29dp"
            android:layout_marginTop="144dp"
            android:text="Full name :"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView9"
            android:layout_width="151dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:text="Email :"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>

    <EditText
            android:id="@+id/passwordInput"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="Strong password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/passwordtxt"
            app:layout_constraintTop_toBottomOf="@+id/emailInput"/>

    <EditText
            android:id="@+id/emailInput"
            android:layout_width="210dp"
            android:layout_height="46dp"
            android:layout_marginTop="184dp"
            android:ems="10"
            android:hint="johndoe@mymail.com"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/passwordtxt"
            android:layout_width="151dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:text="Password:  "
            android:textAlignment="textEnd"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>

    <TextView
            android:id="@+id/passwordtxt2"
            android:layout_width="151dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:text="Position:  "
            android:textAlignment="textEnd"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordtxt"/>
    <Button
            android:id="@+id/rgstr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="onRegisterButtonClicked"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/positionInput"/>
</androidx.constraintlayout.widget.ConstraintLayout>